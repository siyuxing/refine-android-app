<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemtxt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:textSize="12sp"
    android:textStyle="bold"
    android:textColor="@color/trans_text_black"
    android:layout_gravity="center"
    android:background="@drawable/item_selector" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:theme="@style/TextLabel"
        android:baselineAligned="false">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_weight="1">

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/operation"
                android:textSize="12sp"
                android:maxLines="1"
                android:inputType="none"
                android:focusable="false"
                android:textColor="@color/trans_text_black"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_weight="1">

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/owner"
                android:maxLines="1"
                android:inputType="none"
                android:focusable="false"
                android:textSize="12sp"
                android:textColor="@color/trans_text_black"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_weight="1">

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/finished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/is_finish"
                android:textSize="12sp"
                android:maxLines="1"
                android:inputType="none"
                android:focusable="false"
                android:textColor="@color/trans_text_black"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:theme="@style/TextLabel"
        android:baselineAligned="false">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_weight="1">

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/success_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/success_count"
                android:maxLines="1"
                android:inputType="none"
                android:focusable="false"
                android:textSize="12sp"
                android:textColor="@color/trans_text_black"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_weight="1">

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/fail_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/fail_count"
                android:textSize="12sp"
                android:maxLines="1"
                android:inputType="none"
                android:focusable="false"
                android:textColor="@color/trans_text_black"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</LinearLayout>