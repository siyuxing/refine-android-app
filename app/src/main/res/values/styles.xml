<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorLink">@color/tab_select_txt</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">text</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/text_gray</item>
    </style>

    <style name="bottom_bar" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/black</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@xml/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@xml/slide_out_down</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="botoombar_textchange">
        <item name="android:textSize">12sp</item>

    </style>

</resources>
